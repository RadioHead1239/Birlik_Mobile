@page "/cliente/facturas"
@inject NavigationManager Nav

<RoleGuard AllowedRole="Cliente">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="bi bi-receipt me-2"></i> Mis Facturas
            </h4>
            <button class="btn btn-outline-secondary btn-sm" @onclick="@(()=>Nav.NavigateTo("/cliente/dashboard"))">
                <i class="bi bi-arrow-left"></i> Volver
            </button>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <p>Aquí podrás ver y descargar tus facturas emitidas.</p>

                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>N°</th>
                                <th>Fecha</th>
                                <th>Monto</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>000123</td>
                                <td>05/10/2025</td>
                                <td>S/ 250.00</td>
                                <td>
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-file-earmark-pdf"></i> Descargar
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</RoleGuard>
