@page "/cliente/datos"
@inject NavigationManager Nav

<RoleGuard AllowedRole="Cliente">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="bi bi-person-lines-fill me-2"></i> Datos Personales
            </h4>
            <button class="btn btn-outline-secondary btn-sm" @onclick="@(()=>Nav.NavigateTo("/cliente/dashboard"))">
                <i class="bi bi-arrow-left"></i> Volver
            </button>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Nombres</label>
                        <input type="text" class="form-control" value="Juan Pérez" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" value="juanperez@correo.com" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="text" class="form-control" value="+51 987654321" readonly />
                    </div>

                    <button type="button" class="btn btn-outline-primary w-100">
                        <i class="bi bi-pencil me-1"></i> Editar datos
                    </button>
                </form>
            </div>
        </div>
    </div>
</RoleGuard>
