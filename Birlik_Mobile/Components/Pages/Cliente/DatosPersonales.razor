@page "/cliente/datos"
@inject NavigationManager Nav

<div class="page-container">
    <div class="header-section animate-enter">
        <button class="btn-icon-back" @onclick='() => Nav.NavigateTo("/cliente/dashboard")'>
            <i class="bi bi-chevron-left"></i>
        </button>
        <h1>Mi Perfil</h1>
    </div>

    <!-- Profile Header -->
    <div class="profile-header animate-enter" style="animation-delay: 0.1s">
        <div class="avatar-large">
            <i class="bi bi-person"></i>
        </div>
        <h2>@userData.Nombres @userData.Apellidos</h2>
        <p>@userData.Email</p>
    </div>

    <!-- Form -->
    <div class="form-container animate-enter" style="animation-delay: 0.2s">
        <div class="form-group">
            <label>Nombres</label>
            <input type="text" class="input-modern" @bind="userData.Nombres" />
        </div>

        <div class="form-group">
            <label>Apellidos</label>
            <input type="text" class="input-modern" @bind="userData.Apellidos" />
        </div>

        <div class="form-group">
            <label>Teléfono</label>
            <input type="tel" class="input-modern" @bind="userData.Telefono" />
        </div>

        <div class="form-group">
            <label>Dirección</label>
            <textarea class="input-modern" rows="3" @bind="userData.Direccion"></textarea>
        </div>

        <button class="btn-primary mt-4" @onclick="GuardarDatos">
            Guardar Cambios
        </button>
    </div>
</div>

@code {
    private UserData userData = new()
    {
        Nombres = "Juan Carlos",
        Apellidos = "Pérez",
        Email = "juan@ejemplo.com",
        Telefono = "8888-8888",
        Direccion = "San José, Costa Rica"
    };

    private void GuardarDatos()
    {
        // Save logic
    }

    class UserData
    {
        public string Nombres { get; set; }
        public string Apellidos { get; set; }
        public string Email { get; set; }
        public string Telefono { get; set; }
        public string Direccion { get; set; }
    }
}
