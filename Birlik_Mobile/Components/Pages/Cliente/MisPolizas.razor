@page "/cliente/polizas"
@using Birlik_Mobile.Models.Response
@inject NavigationManager Nav
@inject Birlik_Mobile.Services.ApiService Api

<div class="polizas-container">
    <!-- Header de la página -->
    <div class="page-header">
        <button class="back-btn" @onclick="@(() => Nav.NavigateTo("/cliente/dashboard"))">
            <i class="bi bi-arrow-left"></i>
        </button>
        <h1 class="page-title">Mis Pólizas</h1>
        <button class="refresh-btn" @onclick="RefrescarPolizas">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>

    <!-- Filtros y búsqueda -->
    <div class="filters-section">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Buscar póliza..." @bind="searchTerm" @bind:event="oninput">
        </div>

        <div class="filter-buttons">
            <button class="filter-btn @(selectedFilter == "todas" ? "active" : "")" @onclick="@(() => selectedFilter = "todas")">
                Todas
            </button>
            <button class="filter-btn @(selectedFilter == "activas" ? "active" : "")" @onclick="@(() => selectedFilter = "activas")">
                Activas
            </button>
            <button class="filter-btn @(selectedFilter == "vencidas" ? "active" : "")" @onclick="@(() => selectedFilter = "vencidas")">
                Vencidas
            </button>
        </div>
    </div>

    <!-- Lista de pólizas -->
    <div class="polizas-list">
        @if (isLoading)
        {
            <p class="loading-text">Cargando pólizas...</p>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
        else if (!GetFilteredPolizas().Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-shield-x"></i>
                </div>
                <h3>No hay pólizas</h3>
                <p>No se encontraron pólizas con los filtros seleccionados</p>
                <button class="btn-primary" @onclick="@(() => selectedFilter = "todas")">
                    Ver Todas
                </button>
            </div>
        }
        else
        {
            @foreach (var poliza in GetFilteredPolizas())
            {
                <div class="poliza-card @GetPolizaStatusClass(poliza)" @onclick="@(() => VerDetallePoliza(poliza.IdPoliza))">
                    <div class="poliza-header">
                        <div class="poliza-icon"><i class="bi bi-shield-check"></i></div>
                        <div class="poliza-info">
                            <h3 class="poliza-nombre">@poliza.NombreCompania</h3>
                            <p class="poliza-numero">#@poliza.NumeroPoliza</p>
                        </div>
                        <div class="poliza-status">
                            <span class="status-badge @GetPolizaStatusClass(poliza)">
                                @((poliza.VigenciaFin.HasValue && poliza.VigenciaFin.Value.ToDateTime(TimeOnly.MinValue) < DateTime.Today)
                                                        ? "Vencida"
                                                        : "Activa")
                    </span>
                        </div>
                    </div>

                    <div class="poliza-details">
                        <div class="detail-row">
                            <span class="detail-label">Ramo:</span>
                            <span class="detail-value">@poliza.NombreRamo</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Vigencia:</span>
                            <span class="detail-value">
                                @poliza.VigenciaInicio?.ToString("dd/MM/yyyy") - @poliza.VigenciaFin?.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="poliza-actions">
                        <button class="action-btn primary" @onclick="@(() => VerDetallePoliza(poliza.IdPoliza))" @onclick:stopPropagation="true">
                            <i class="bi bi-eye"></i> Ver Detalle
                        </button>
                        <button class="action-btn secondary" @onclick="@(() => DescargarPoliza(poliza.Constancia?.RutaDocumento))" @onclick:stopPropagation="true">
                            <i class="bi bi-download"></i> Constancia
                        </button>
                    </div>
                </div>
            }
        }
    </div>


    <button class="fab-btn" >
        <i class="bi bi-plus-lg"></i>
    </button>

    @if (!GetFilteredPolizas().Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-shield-x"></i>
            </div>
            <h3>No hay pólizas</h3>
            <p>No se encontraron pólizas con los filtros seleccionados</p>
            <button class="btn-primary" @onclick="@(() => selectedFilter = "todas")">
                Ver Todas
            </button>
        </div>
    }
</div>

@code {
    private string searchTerm = string.Empty;
    private string selectedFilter = "todas";

    private List<PolizaResponseDTO> polizas = new();

    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await CargarPolizasAsync();
    }

    private async Task CargarPolizasAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            // 🧠 reemplaza este idCliente con el del usuario logueado (por ahora lo usamos fijo)
            int idCliente = 119;

            var result = await Api.GetPolizaClienteAsync(idCliente);

            if (result.IsSuccess && result.Data != null)
            {
                // si tu endpoint devuelve una sola póliza, la metemos a la lista
                polizas = new List<PolizaResponseDTO> { result.Data };
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "No se pudieron cargar las pólizas.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error inesperado: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<PolizaResponseDTO> GetFilteredPolizas()
    {
        var filtered = polizas.AsEnumerable();

        if (!string.IsNullOrEmpty(searchTerm))
        {
            filtered = filtered.Where(p =>
                (p.NumeroPoliza ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (p.NombreCompania ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        return filtered;
    }

    private string GetPolizaStatusClass(PolizaResponseDTO poliza)
    {
        if (poliza.VigenciaFin.HasValue)
        {
            var fechaFin = poliza.VigenciaFin.Value.ToDateTime(TimeOnly.MinValue);

            if (fechaFin < DateTime.Today) return "expired";
            if (fechaFin <= DateTime.Today.AddDays(30)) return "warning";
        }

        return "active";
    }

    private void VerDetallePoliza(int polizaId)
    {
        Nav.NavigateTo($"/cliente/poliza-detalle/{polizaId}");
    }

    private void DescargarPoliza(string? url)
    {
        if (!string.IsNullOrEmpty(url))
            Nav.NavigateTo(url, true); // abre el PDF
    }

    private async Task RefrescarPolizas()
    {
        await CargarPolizasAsync();
    }
}
