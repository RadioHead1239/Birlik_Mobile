@page "/cliente/polizas"
@inject NavigationManager Nav

<RoleGuard AllowedRole="Cliente">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary mb-0">
                <i class="bi bi-shield-check me-2"></i> Mis Pólizas
            </h4>
            <button class="btn btn-outline-secondary btn-sm" @onclick="@(()=>Nav.NavigateTo("/cliente/dashboard"))">
                <i class="bi bi-arrow-left"></i> Volver
            </button>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <p>Aquí se listarán todas tus pólizas activas y vencidas.</p>

                <div class="list-group">
                    <div class="list-group-item">
                        <h6 class="fw-bold">Póliza N° 001245</h6>
                        <p class="mb-1 text-muted">Ramo: Vehicular | Vigencia: 01/01/2025 - 31/12/2025</p>
                        <button class="btn btn-primary btn-sm">
                            <i class="bi bi-eye me-1"></i> Ver detalle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</RoleGuard>
