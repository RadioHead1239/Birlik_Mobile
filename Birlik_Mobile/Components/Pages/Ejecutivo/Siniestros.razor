@page "/operativo/siniestros"
@inject NavigationManager Nav

<div class="placeholder-container">
    <div class="placeholder-content">
        <div class="placeholder-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <h2 class="placeholder-title">Gestión de Siniestros</h2>
        <p class="placeholder-description">
            Esta funcionalidad estará disponible próximamente. Podrás gestionar reportes de siniestros desde aquí.
        </p>
        <div class="placeholder-features">
            <h4>Funcionalidades que incluirá:</h4>
            <ul>
                <li><i class="bi bi-check-circle"></i> Reporte de nuevos siniestros</li>
                <li><i class="bi bi-check-circle"></i> Seguimiento de casos</li>
                <li><i class="bi bi-check-circle"></i> Documentación requerida</li>
                <li><i class="bi bi-check-circle"></i> Estado de pagos</li>
            </ul>
        </div>
        <button class="btn-back" @onclick="@(() => Nav.NavigateTo("/operativo/dashboard"))">
            <i class="bi bi-arrow-left me-2"></i>
            Volver al Dashboard
        </button>
    </div>
</div>

<style>
.placeholder-container {
    padding: 2rem 1rem;
    background: var(--light-gray);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.placeholder-content {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: var(--card-shadow);
    max-width: 500px;
    width: 100%;
}

.placeholder-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--primary-gradient);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    margin: 0 auto 1.5rem auto;
}

.placeholder-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.placeholder-description {
    color: var(--dark-gray);
    margin-bottom: 2rem;
    line-height: 1.6;
}

.placeholder-features {
    text-align: left;
    background: var(--blue-50);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.placeholder-features h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    font-size: 1rem;
}

.placeholder-features ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.placeholder-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: var(--dark-gray);
    font-size: 0.9rem;
}

.placeholder-features li i {
    color: var(--success-color);
}

.btn-back {
    background: var(--primary-color);
    color: var(--white);
    border: none;
    border-radius: 12px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
}   

.btn-back:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--card-shadow);
}

@@media (max-width: 768px) {
    .placeholder-container {
        padding: 1rem;
    }
    
    .placeholder-content {
        padding: 2rem 1.5rem;
    }
    
    .placeholder-icon {
        width: 60px;
        height: 60px;
        font-size: 2rem;
    }
    
    .placeholder-title {
        font-size: 1.3rem;
    }
}
</style>
